{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    }
  ],
  "hosting": {
    "public": "jobchat-app/dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "site": "hireflow"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "rewrites": {
    "source": "**",
    "destination": "/index.html"
  }
}
